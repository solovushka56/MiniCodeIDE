<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Theme.MiniCodeIDE.MyView" parent="">
        <item name="android:background">@color/gray_400</item>

<!--        <item name="android:windowBackground">@android:color/transparent</item>-->
<!--        <item name="android:windowIsTranslucent">true</item>-->

        <item name="fontFamily">@font/cascadia_code</item>
        <!--        <item name="exampleColor">@color/light_blue_400</item>-->
    </style>

    <style name="Theme.NoFlash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>



    <style name="StyleToggleButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/toggle_background</item>
        <item name="android:textColor">@color/toggle_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>



<!--    <style name="CommonTextButton">-->
<!--        <item name="app"-->
<!--        -->
<!--    </style>-->

    <style name="MinicodeTextDefault">
        <item name="color">@color/white</item>
        <item name="fontFamily">@font/cascadia_code</item>
    </style>
    
    <style name="CustomImageButtonActive">
        <item name="android:scaleY">0.8</item>
        <item name="android:scaleX">0.8</item>
        <item name="fontFamily">@font/cascadia_code_semi_bold_origin</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/button_rect_common</item>
        <item name="android:backgroundTint">@color/violet_light</item>
        <item name="android:tint">@color/blue_light</item>
        <item name="android:layout_margin">15dp</item>

        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>


    <style name="CustomImageButtonInactive">
        <item name="android:scaleY">0.8</item>
        <item name="android:scaleX">0.8</item>
        <item name="fontFamily">@font/cascadia_code_semi_bold_origin</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/button_rect_common</item>
        <item name="android:backgroundTint">@color/violet</item>
        <item name="android:tint">@color/violet_light</item>
        <item name="android:layout_margin">15dp</item>

        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="CustomActivityAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_up</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Widget.Theme.MiniCode.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
        <item name="exampleColor">@color/light_blue_400</item>
    </style>

</resources>