<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment"
    android:background="@drawable/group_rect_black"
    >

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_margin="15dp"
        android:contentDescription="scrview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/panelsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.skeeper.minicode.SettingItemView
                android:id="@+id/codeEditorSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                />

            <com.skeeper.minicode.SettingItemView
                android:id="@+id/gitSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                />

            <com.skeeper.minicode.SettingItemView
                android:id="@+id/langSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>


        </LinearLayout>

    </ScrollView>


</FrameLayout>